<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dip" >

            <TextView
                android:id="@+id/EventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未处理事件"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/huangse" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:orientation="vertical" 
            android:background="@color/hengxian">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dip" >

            <TextView
                android:id="@+id/EventContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        未处理事件未处理事件未处理事件未处理事件未处理事件未处理事件未处理事件未处理事件未处理事件"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/baise"
                android:textSize="15dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/EventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012年12月11日"
                android:textColor="@color/shijian" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>